{
  "name": "dynasty-manager",
  "version": "1.0.0",
  "description": "CFB25 Dynasty Manager",
  "author": {
    "name": "KN1ME"
  },
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "next dev -p 3001",
    "build": "next build",
    "start": "next start",
    "electron": "cross-env NODE_ENV=development electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3001 && npm run electron\"",
    "build-electron": "next build && electron-builder",
    "dist": "next build && electron-builder --publish=never",
    "dist-all": "next build && electron-builder -mwl",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.kn1me.dynasty-manager",
    "productName": "Dynasty Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "out/**/*",
      "node_modules/**/*",
      "package.json",
      "!node_modules/.cache",
      "!node_modules/electron",
      "!node_modules/electron-builder"
    ],
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "compression": "maximum",
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.sports",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "public/favicon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "publisherName": "KN1ME"
    },
    "linux": {
      "icon": "public/favicon.ico",
      "category": "Game",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Dynasty Manager"
    }
  },
  "dependencies": {
    "@lucide/lab": "0.1.2",
    "@radix-ui/react-alert-dialog": "1.1.14",
    "@radix-ui/react-dialog": "1.1.14",
    "@radix-ui/react-label": "2.1.7",
    "@radix-ui/react-popover": "1.1.14",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-scroll-area": "1.2.9",
    "@radix-ui/react-select": "2.2.5",
    "@radix-ui/react-slot": "1.2.3",
    "@radix-ui/react-tabs": "1.1.12",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "cmdk": "1.1.1",
    "file-saver": "2.0.5",
    "framer-motion": "12.15.0",
    "lucide-react": "0.511.0",
    "next": "15.3.3",
    "next-themes": "0.4.6",
    "papaparse": "5.5.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hot-toast": "2.5.2",
    "react-image-crop": "11.0.10",
    "react-tabs": "6.1.0",
    "react-window": "^1.8.11",
    "recharts": "2.15.3",
    "tailwind-merge": "3.3.0",
    "tailwindcss-animate": "1.0.7",
    "tesseract.js": "6.0.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/file-saver": "2.0.7",
    "@types/node": "22.15.29",
    "@types/papaparse": "5.3.16",
    "@types/react": "19.1.6",
    "@types/react-dom": "19.1.5",
    "@types/tesseract.js": "0.0.2",
    "concurrently": "9.1.2",
    "cross-env": "^7.0.3",
    "electron": "36.3.2",
    "electron-builder": "26.0.16",
    "eslint": "9.28.0",
    "eslint-config-next": "15.3.3",
    "postcss": "8.5.4",
    "tailwindcss": "^3.4.17",
    "typescript": "5.8.3",
    "wait-on": "8.0.3"
  }
}
